<!DOCTYPE html>
<html>
  <head>
    <%= render "layouts/shared/head", title: "Dotmark - Admin Panel" %>
  </head>
  <body>
    <header>
      <% if admin_signed_in? %>
        <%= render 'layouts/admin_layout/navigation' %>
      <% end %>
    </header>
    <main role="main">
      <div class="container">
        <% if admin_signed_in? %>
          <%= render 'layouts/shared/breadcrumbs' %>
        <% end %>
        <%= render 'layouts/shared/messages' %>
        <%= render 'layouts/admin_layout/institute_settings' %>
        <%= render 'layouts/admin_layout/settings' %>
        <%= yield %>
      </div>
    </main>
    <footer>
      <%= render 'layouts/shared/footer' %>
    </footer>
  </body>
</html>
