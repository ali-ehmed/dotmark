<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Dotmark - Admin Panel" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Dotmark" %>">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <link href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/css/select2.min.css" rel="stylesheet" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/js/select2.min.js"></script>
  </head>
  <body>
    <header>
      <% if admin_signed_in? %>
        <%= render 'layouts/admin_layout/navigation' %>
      <% end %>
    </header>
    <main role="main">
      <div class="container">
        <% if admin_signed_in? %>
          <%= render 'layouts/shared/breadcrumbs' %>
        <% end %>
        <%= render 'layouts/shared/messages' %>
        <%= render 'layouts/admin_layout/institute_settings' %>
        <%= render 'layouts/admin_layout/settings' %>
        <%= yield %>
      </div>
    </main>
    <footer>
      <%= render 'layouts/shared/footer' %>
    </footer>
  </body>
</html>
