<% content_for :admin_settings do %>
	<div class="col-md-6">
		<blockquote>
			<h3>Admin Account</h3>
		</blockquote>
		<br />
		<%= validation_errors_notifications(@admin) %>
		<%= simple_form_for @admin, url: setting_path(@admin), method: :put do |f| %>
			<div class="form-group">
				<%= f.input :email %>
			</div>
			<div class="form-group">
				<%= f.input :username %>
			</div>
			<div class="form-group">
				<%= f.input :password %>
			</div>
			<div class="form-group">
				<%= f.input :password_confirmation %>
			</div>
			<div class="form-group">
				<%= f.submit "Update", class: "btn btn-primary" %>
			</div>
		<% end %>
	</div>
	<div class="col-md-6">
		<blockquote class="blockquote-reverse"><h3>Set Admin Rights</h3></blockquote>
		<br /><br />
		<table class="table table-striped">
			<tr>
				<th>Username</th>
				<th>Email Address</th>
				<th>Admin</th>
				<th></th>
			</tr>
			<tr>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
			</tr>
		</table>
	</div>
<% end %>