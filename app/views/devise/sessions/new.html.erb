<%#= render "devise/shared/links" %>
<div class="container">
  <blockquote>
    <h1>Welcome <%= @account.resource.username %></h1>
  </blockquote>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Please Sign In</h3>
        </div>
        <div class="panel-body">

        	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        		<fieldset>
        			<div class="form-group">
        				<%= f.input :login, required: false, autofocus: true, class: "form-control", placeholder: "Email or Username" %>
              </div>
              <div class="form-group">
                <%= f.input :password, required: false, class: "form-control", placeholder: "Password" %>
              </div>
              <div class="checkbox">
                 <%= f.check_box :remember_me, {:class => "styled"} if devise_mapping.rememberable? %>
                  <label>
                    Remember Me
                  </label>
              </div>
              <%= f.button :button, 'Log in', :class => 'btn btn-lg btn-success btn-block', data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Signing In...!"} %>
            </fieldset>
					<% end %>
        </div>
      </div>
    </div>
  </div>
</div>

