<div class="page-header">
	<h1>Creating <small>Student Account</small></h1>
</div>

<div class="row">
	<div class="col-lg-offset-3 col-md-6 col-lg-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="panel-title">Student Account</div>
      </div>
      <div class="panel-body">
      	<div class="form-group">
          <div class="form-inputs">
            <%= f.label :email, "Email:" %>
            <%= f.input :email, label: false, placeholder: "Email", required: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="form-inputs">
            <%= f.label :username, "Username:" %>
            <%= f.input :username, label: false, placeholder: "Username", required: true %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>