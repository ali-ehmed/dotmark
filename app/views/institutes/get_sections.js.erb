$('.section_color_picker').minicolors({
  theme: 'bootstrap'
});

// Students Admission
<% if params[:new_admission] == "false" %>
	$(".admission_sections").hide().html("<%= escape_javascript(render 'administrations/admissions/batches_sections', sections: @sections).html_safe %>").fadeIn(500);
<% else %>
	$(".admission_sections").hide().html("<%= escape_javascript(render 'administrations/admissions/batches_sections', sections: @sections, new_admission: @new_admission).html_safe %>").fadeIn(500);
<% end %>

<!--Time Table Sections-->

$(".time_table_sections").hide().html("<%= escape_javascript(render partial: 'administrations/time_table/time_table_sections', collection: @sections, :as => :section).html_safe %>").fadeIn(500);