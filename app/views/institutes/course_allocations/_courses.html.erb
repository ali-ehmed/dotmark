<% if courses.present? %>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Code</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% courses.each do |course| %>
				<tr>
					<td><%= course.name %></td>
					<td><%= course.code %></td>
					<td><%= check_box_tag "course_ids[]", course.id %></td>
				</tr>
			<% end %>
		</tbody>
	</table>						
<% else %>
	<blockquote><p>Please Select Semester</p></blockquote>
<% end %>