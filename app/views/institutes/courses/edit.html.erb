<% content_for :settings do %>
  <div class="page-header">
    <h2>Editing Classroom</h2>  
  </div>
  <%= simple_form_for @classroom, url: institutes_classroom_path(@classroom), method: :put, defaults: { input_html: { class: "form-control" } } do |f| %>
    
    <div class="row">
      <div class="col-md-6">
        <%= f.input :name, placeholder: "Classroom Name" %>
      </div>
      <div class="col-md-6">
        <label>Type Of Room:</label>
        <%= f.input :type_or_room, label: false, collection: [["Classroom", 1], ["Lab", 2]], prompt: "--Choose Type--" %>
      </div>
    </div>
    <p>
      <div class="row">
        <div class="col-md-6">
          <label>Color of Class <em>(Optional)</em>:</label>
          <%= f.input :color, label: false, placeholder: "Pick Color", input_html: { data: { minicolors: {theme: :bootstrap, position: :left}}}  %>
        </div>
        <div class="col-md-6">
          <%= f.input :strength, placeholder: "Class Strength" %>
        </div>
      </div>
    </p>
    <a href="<%= institutes_classrooms_path %>" class="btn btn-default">Cancel</a>
    <button class="btn btn-success" type="submit">Save</button>     
  <% end %>
<% end %>
