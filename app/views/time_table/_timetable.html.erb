<% if @teacher_allocations.present? %>
	<div class="row">
		<div class="col-md-12">
			<table class="table table-bordered" id="time_table">
				<tr>
					<td align="center" rowspan="2">
						<strong>Fridays</strong>
						<div class="divider-cell"></div>
						<strong>Days</strong>
					</td>
					<% @fridays.each do |timing| %>
						<td align="center"><%= timing.timings %></td>
					<% end %>
				</tr>
				<tr>
					<% @non_fridays.each do |timing| %>
						<td align="center"><%= timing.timings %></td>
					<% end %>
				</tr>
				<tr class="period_days">
					<td align="center"><strong>Week Days</strong></td>
					<% (1..9).each do |period_days| %>
						<td align="center"><%= period_days %></td>
					<% end %>
				</tr>
				<% @week_days.each_with_index do |days, i| %>
					<tr>
						<td align="center"><strong><%= days.week_day %></strong></td>
						<% TimeSlot.for(days.week_day).each do |time_slot| %>
							<td align="center" class="loader-cell-<%= time_slot.id %>" data-time-slot-id="<%= time_slot.id %>">
								<% if time_slot.available_classrooms.length == 0 %>
									<span class="label label-danger">
										N/A
									</span>
								<% else %>
									<% if current_resource.has_room_scheduled?(@batch_id, time_slot.id).present? %>

										<% course = current_resource.has_room_scheduled?(@batch_id, time_slot.id).first.course %>
										<% section = current_resource.has_room_scheduled?(@batch_id, time_slot.id).first.section %>

										<span class="label" style="cursor: help;background-color:<%= course.color %>;" data-container="body" data-html="true" title="<%= course.detailed_name %>" data-toggle="popover" data-placement="top" data-content="<%= reservation_detail(course, section) %>" data-trigger="hover">
											<%= course.code %>
										</span>
									<% else %>
										<%= link_to "Available", "javascript:void(0);", id: "time_cell", onclick: "openTimeScheduleCell(this);", data: { url: schedule_a_time_path(week_day: time_slot.week_day, time: time_slot.start_time, format: :js) } %>
									<% end %>
								<% end %>
							</td>
						<% end %>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
<% else %>
	<div class="well">
		<strong>No Allocations present in this batch to Schedule.</strong>
	</div>
<% end %>
